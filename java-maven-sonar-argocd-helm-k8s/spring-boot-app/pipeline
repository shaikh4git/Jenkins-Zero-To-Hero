pipeline {
    agent {
        docker { 
            image 'node:20.16.0-alpine3.20' 
            args '-v /var/run/docker.sock:/var/run/docker.sock' // Ensure Docker daemon can be accessed
        }
    }
    environment {
        PATH = "/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:${env.PATH}"
    }
    stages {
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }
    }
}
