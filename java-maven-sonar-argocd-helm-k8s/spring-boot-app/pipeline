pipeline {
    agent {
        docker { 
            image 'node:20.16.0-alpine3.20' 
            args '-v /var/run/docker.sock:/var/run/docker.sock' // Ensure Docker daemon can be accessed
            user 'root' // Run as root
        }
    }
    stages {
        stage('Test Docker') {
            steps {
                script {
                    // Check Docker version to ensure Docker is working
                    sh 'docker --version'
                    
                    // Check node version to ensure the correct Docker image is used
                    sh 'node --version'
                }
            }
        }
    }
}
