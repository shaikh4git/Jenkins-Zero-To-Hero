pipeline {

    environment {
        DOCKER_PATH = '/usr/local/bin/docker' // Update this path based on where Docker is installed
        DOCKER_TAG = getDockerTag()
    }
    
    agent {
        docker { 
            image 'node:20.16.0-alpine3.20' 
            args '-v /var/run/docker.sock:/var/run/docker.sock' // Ensure Docker daemon can be accessed
        }
    }
    stages {
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }
    }
}
